{
  "name": "@carbonplan/components",
  "version": "2.3.1",
  "description": "shared components for our websites",
  "main": "dst/index.js",
  "module": "dst/index.esm.js",
  "scripts": {
    "build": "microbundle --no-compress --jsx React.createElement -f modern,es,cjs --jsxFragment React.Fragment",
    "format": "npm run format-js && npm run format-md",
    "format-js": "prettier --write 'src/**/*.js' '*.css'",
    "format-md": "prettier --write --parser mdx '*.md'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/carbonplan/components.git"
  },
  "keywords": [
    "carbonplan",
    "climate",
    "carbon",
    "theme-ui"
  ],
  "author": "freeman-lab",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/carbonplan/components/issues"
  },
  "files": [
    "dst",
    "fonts.css",
    "globals.css"
  ],
  "homepage": "https://github.com/carbonplan/components#readme",
  "dependencies": {
    "@theme-ui/color": "^0.3.5"
  },
  "peerDependencies": {
    "next": "^10.0.4",
    "react": "^16.13.0",
    "theme-ui": "^0.3.5"
  },
  "devDependencies": {
    "microbundle": "^0.13.0",
    "prettier": "^2.2.1"
  }
}
